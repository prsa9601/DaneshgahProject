@page
@model IndexModel
@{
    Layout = null;
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>سیستم کنترل دمای واکنشی</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Tahoma', 'Segoe UI', Arial, sans-serif;
        }

        :root {
            --primary: #2c3e50;
            --secondary: #3498db;
            --success: #2ecc71;
            --danger: #e74c3c;
            --warning: #f39c12;
            --light: #ecf0f1;
            --dark: #2c3e50;
            --gray: #7f8c8d;
        }

        body {
            background: linear-gradient(135deg, #1a2980, #26d0ce);
            color: var(--light);
            min-height: 100vh;
            padding: 20px;
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        header {
            text-align: center;
            margin-bottom: 30px;
            padding: 20px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
        }

        .subtitle {
            font-size: 1.2rem;
            color: var(--light);
            opacity: 0.9;
        }

        .dashboard {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .card {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            padding: 25px;
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
            }

        .card-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .card-title {
            font-size: 1.4rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .temperature-control {
            text-align: center;
            padding: 20px;
        }

        .temperature-input-group {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 15px;
            margin: 25px 0;
        }

        .temperature-input {
            width: 120px;
            padding: 15px;
            font-size: 1.5rem;
            text-align: center;
            border: none;
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.9);
            color: var(--dark);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

            .temperature-input:focus {
                outline: none;
                box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.5);
            }

        .btn {
            padding: 15px 30px;
            font-size: 1.1rem;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: bold;
        }

        .btn-primary {
            background: var(--secondary);
            color: white;
        }

            .btn-primary:hover {
                background: #2980b9;
                transform: translateY(-2px);
            }

        .btn-success {
            background: var(--success);
            color: white;
        }

            .btn-success:hover {
                background: #27ae60;
                transform: translateY(-2px);
            }

        .temperature-display {
            text-align: center;
            padding: 20px;
        }

        .temperature-value {
            font-size: 5rem;
            font-weight: bold;
            margin: 20px 0;
            text-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            position: relative;
        }

        .temperature-unit {
            font-size: 2rem;
            opacity: 0.8;
        }

        .status-indicator {
            display: inline-block;
            padding: 8px 20px;
            border-radius: 50px;
            font-weight: bold;
            margin-top: 10px;
        }

        .state-s1 {
            background-color: var(--secondary);
        }

        .state-s2 {
            background-color: var(--success);
        }

        .state-s3 {
            background-color: var(--warning);
        }

        .device-status {
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
        }

        .device {
            text-align: center;
            padding: 15px;
            border-radius: 10px;
            width: 45%;
            transition: all 0.3s ease;
        }

            .device.active {
                background: rgba(46, 204, 113, 0.2);
                border: 1px solid var(--success);
            }

            .device.inactive {
                background: rgba(231, 76, 60, 0.2);
                border: 1px solid var(--danger);
            }

        .device-icon {
            font-size: 2.5rem;
            margin-bottom: 10px;
        }

        .device-name {
            font-size: 1.2rem;
            margin-bottom: 5px;
        }

        .device-state {
            font-weight: bold;
        }

        .events-log {
            max-height: 300px;
            overflow-y: auto;
        }

        .log-item {
            padding: 12px 15px;
            margin-bottom: 10px;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.1);
            display: flex;
            align-items: center;
            gap: 10px;
            animation: fadeIn 0.5s ease;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .log-time {
            font-size: 0.9rem;
            opacity: 0.7;
            min-width: 80px;
        }

        .log-message {
            flex-grow: 1;
        }

        .connection-status {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px 15px;
            border-radius: 50px;
            margin-top: 20px;
            font-weight: bold;
        }

        .connected {
            background: rgba(46, 204, 113, 0.2);
            border: 1px solid var(--success);
        }

        .disconnected {
            background: rgba(231, 76, 60, 0.2);
            border: 1px solid var(--danger);
        }

        .status-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            display: inline-block;
        }

        .connected .status-dot {
            background-color: var(--success);
            animation: pulse 1.5s infinite;
        }

        .disconnected .status-dot {
            background-color: var(--danger);
        }

        @@keyframes pulse {
            0% {
                opacity: 1;
            }

            50% {
                opacity: 0.5;
            }

            100% {
                opacity: 1;
            }
        }

        .state-diagram {
            text-align: center;
            margin-top: 20px;
        }

        .state-transitions {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
            position: relative;
        }

        .state-node {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            position: relative;
            z-index: 2;
        }

        .state-s1-node {
            background-color: var(--secondary);
        }

        .state-s2-node {
            background-color: var(--success);
        }

        .state-s3-node {
            background-color: var(--warning);
        }

        .state-active {
            box-shadow: 0 0 0 4px rgba(255, 255, 255, 0.8);
            transform: scale(1.1);
            transition: all 0.3s ease;
        }

        .state-connector {
            position: absolute;
            height: 4px;
            background: rgba(255, 255, 255, 0.5);
            top: 50%;
            transform: translateY(-50%);
            z-index: 1;
        }

        .control-buttons {
            display: flex;
            gap: 10px;
            justify-content: center;
            margin-top: 20px;
        }

        footer {
            text-align: center;
            margin-top: 40px;
            padding: 20px;
            font-size: 0.9rem;
            opacity: 0.8;
        }

        @@media (max-width: 768px) {
            .dashboard {
                grid-template-columns: 1fr;
            }

            h1 {
                font-size: 2rem;
            }

            .temperature-value {
                font-size: 4rem;
            }

            .temperature-input-group {
                flex-direction: column;
            }

            .control-buttons {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1><i class="fas fa-thermometer-half"></i> سیستم کنترل دمای واکنشی</h1>
            <p class="subtitle">کنترل و مانیتورینگ لحظه‌ای دمای سیستم</p>
        </header>

        <div class="dashboard">
            <!-- کارت کنترل دما -->
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title"><i class="fas fa-sliders-h"></i> کنترل دما</h2>
                </div>
                <div class="temperature-control">
                    <div class="temperature-input-group">
                        <input type="number" id="temperatureInput" class="temperature-input"
                               min="10" max="50" value="20" placeholder="دمای مورد نظر">
                        <span style="font-size: 1.5rem;">°C</span>
                    </div>
                    <div class="control-buttons">
                        <button class="btn btn-primary" onclick="setTemperature()">
                            <i class="fas fa-paper-plane"></i> ارسال دما
                        </button>
                        <button class="btn btn-success" onclick="startAutoSimulation()">
                            <i class="fas fa-play"></i> شروع شبیه‌سازی
                        </button>
                        <button class="btn btn-danger" onclick="stopAutoSimulation()">
                            <i class="fas fa-stop"></i> توقف شبیه‌سازی
                        </button>
                    </div>
                </div>
            </div>

            <!-- کارت وضعیت دما -->
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title"><i class="fas fa-temperature-high"></i> وضعیت دما</h2>
                </div>
                <div class="temperature-display">
                    <div class="temperature-value">
                        <span id="temperature">--</span>
                        <span class="temperature-unit">°C</span>
                    </div>
                    <div class="status-indicator state-s1" id="state-indicator">حالت S1</div>
                </div>
            </div>

            <!-- کارت وضعیت دستگاه‌ها -->
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title"><i class="fas fa-cogs"></i> وضعیت دستگاه‌ها</h2>
                </div>
                <div class="device-status">
                    <div class="device inactive" id="heater-device">
                        <div class="device-icon"><i class="fas fa-fire"></i></div>
                        <div class="device-name">هیتر</div>
                        <div class="device-state">خاموش</div>
                    </div>
                    <div class="device inactive" id="cooler-device">
                        <div class="device-icon"><i class="fas fa-snowflake"></i></div>
                        <div class="device-name">کولر</div>
                        <div class="device-state">خاموش</div>
                    </div>
                </div>

                <div class="state-diagram">
                    <h3>دیاگرام حالت‌ها</h3>
                    <div class="state-transitions">
                        <div class="state-node state-s1-node state-active" id="state-s1-node">S1</div>
                        <div class="state-connector" style="left: 100px; right: 100px;"></div>
                        <div class="state-node state-s2-node" id="state-s2-node">S2</div>
                        <div class="state-connector" style="left: 200px; right: 200px;"></div>
                        <div class="state-node state-s3-node" id="state-s3-node">S3</div>
                    </div>
                </div>
            </div>

            <!-- کارت رویدادها -->
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title"><i class="fas fa-list-alt"></i> رویدادهای سیستم</h2>
                </div>
                <div class="events-log" id="events-log">
                    <div class="log-item">
                        <span class="log-time">۰۰:۰۰:۰۰</span>
                        <i class="fas fa-info-circle" style="color: var(--secondary);"></i>
                        <span class="log-message">سیستم راه‌اندازی شد</span>
                    </div>
                </div>

                <div class="connection-status disconnected" id="connection-status">
                    <span class="status-dot"></span>
                    <span>در حال اتصال به سرور...</span>
                </div>
            </div>
        </div>

        <footer>
            <p>سیستم کنترل دمای واکنشی | طراحی شده با SignalR</p>
        </footer>
    </div>

    <script>
        // وضعیت اولیه سیستم
        let currentState = {
            temperature: 20,
            state: "S1",
            heater: false,
            cooler: false
        };

        // عناصر DOM
        const eventsLog = document.getElementById('events-log');
        const connectionStatus = document.getElementById('connection-status');
        let connection = null;
        let autoSimulationInterval = null;

        // اتصال SignalR
        function connectSignalR() {
            connection = new signalR.HubConnectionBuilder()
                .withUrl("/temperaturehub")
                .withAutomaticReconnect()
                .build();

            connection.on("ReceiveMessage", (data) => {
                updateDashboard(data);
            });

            connection.start()
                .then(() => {
                    connectionStatus.className = 'connection-status connected';
                    connectionStatus.innerHTML = '<span class="status-dot"></span> <span>متصل به سرور</span>';
                    addLogEvent("اتصال به سرور برقرار شد", "success");
                })
                .catch((error) => {
                    console.error("Connection failed:", error);
                    connectionStatus.className = 'connection-status disconnected';
                    connectionStatus.innerHTML = '<span class="status-dot"></span> <span>قطع ارتباط با سرور</span>';
                    addLogEvent("اتصال با سرور قطع شد", "error");
                });

            connection.onreconnecting(() => {
                connectionStatus.className = 'connection-status disconnected';
                connectionStatus.innerHTML = '<span class="status-dot"></span> <span>در حال اتصال مجدد...</span>';
                addLogEvent("در حال اتصال مجدد به سرور", "warning");
            });

            connection.onreconnected(() => {
                connectionStatus.className = 'connection-status connected';
                connectionStatus.innerHTML = '<span class="status-dot"></span> <span>متصل به سرور</span>';
                addLogEvent("اتصال مجدد برقرار شد", "success");
            });

            return connection;
        }

        // ارسال دما به سرور
        async function setTemperature() {
            const temperatureInput = document.getElementById('temperatureInput');
            const temperature = parseInt(temperatureInput.value);

            if (isNaN(temperature) || temperature < 10 || temperature > 50) {
                addLogEvent("لطفاً یک دمای معتبر بین ۱۰ تا ۵۰ درجه وارد کنید", "error");
                return;
            }

            if (connection && connection.state === signalR.HubConnectionState.Connected) {
                try {
                    addLogEvent(`ارسال دمای ${temperature}°C به سرور...`, "info");
                    const result = await connection.invoke("SendMessage", temperature);
                    updateDashboard(result);
                    addLogEvent(`دمای ${temperature}°C با موفقیت ارسال شد`, "success");
                } catch (error) {
                    console.error("Error sending temperature:", error);
                    addLogEvent("خطا در ارسال دما به سرور", "error");
                }
            } else {
                addLogEvent("اتصال با سرور برقرار نیست", "error");
            }
        }

        // شروع شبیه‌سازی خودکار
        async function startAutoSimulation() {
            if (connection && connection.state === signalR.HubConnectionState.Connected) {
                try {
                    await connection.invoke("StartSimulation");
                    addLogEvent("شبیه‌سازی خودکار شروع شد", "success");
                } catch (error) {
                    console.error("Error starting simulation:", error);
                    addLogEvent("خطا در شروع شبیه‌سازی", "error");
                }
            } else {
                addLogEvent("اتصال با سرور برقرار نیست", "error");
            }
        }

        // توقف شبیه‌سازی خودکار
        async function stopAutoSimulation() {
            if (connection && connection.state === signalR.HubConnectionState.Connected) {
                try {
                    await connection.invoke("StopSimulation");
                    addLogEvent("شبیه‌سازی خودکار متوقف شد", "warning");
                } catch (error) {
                    console.error("Error stopping simulation:", error);
                    addLogEvent("خطا در توقف شبیه‌سازی", "error");
                }
            } else {
                addLogEvent("اتصال با سرور برقرار نیست", "error");
            }
        }

        // به روزرسانی داشبورد با داده‌های جدید
        function updateDashboard(data) {
            // به روزرسانی دما
            document.getElementById('temperature').textContent = data.temperature;

            // به روزرسانی حالت
            document.getElementById('state-indicator').textContent = `حالت ${data.state}`;
            document.getElementById('state-indicator').className = `status-indicator state-${data.state.toLowerCase()}`;

            // به روزرسانی وضعیت دستگاه‌ها
            const heaterDevice = document.getElementById('heater-device');
            const coolerDevice = document.getElementById('cooler-device');

            if (data.heater) {
                heaterDevice.className = 'device active';
                heaterDevice.querySelector('.device-state').textContent = 'روشن';
            } else {
                heaterDevice.className = 'device inactive';
                heaterDevice.querySelector('.device-state').textContent = 'خاموش';
            }

            if (data.cooler) {
                coolerDevice.className = 'device active';
                coolerDevice.querySelector('.device-state').textContent = 'روشن';
            } else {
                coolerDevice.className = 'device inactive';
                coolerDevice.querySelector('.device-state').textContent = 'خاموش';
            }

            // به روزرسانی دیاگرام حالت‌ها
            updateStateDiagram(data.state);

            // ذخیره وضعیت فعلی
            currentState = data;
        }

        // به روزرسانی دیاگرام حالت‌ها
        function updateStateDiagram(state) {
            // حذف کلاس active از همه حالت‌ها
            document.getElementById('state-s1-node').classList.remove('state-active');
            document.getElementById('state-s2-node').classList.remove('state-active');
            document.getElementById('state-s3-node').classList.remove('state-active');

            // اضافه کردن کلاس active به حالت فعلی
            document.getElementById(`state-${state.toLowerCase()}-node`).classList.add('state-active');
        }

        // اضافه کردن رویداد به لیست
        function addLogEvent(message, type = "info") {
            const now = new Date();
            const timeString = now.toLocaleTimeString('fa-IR');

            let icon = "info-circle";
            let color = "var(--secondary)";

            if (type === "success") {
                icon = "check-circle";
                color = "var(--success)";
            } else if (type === "error") {
                icon = "exclamation-circle";
                color = "var(--danger)";
            } else if (type === "warning") {
                icon = "exclamation-triangle";
                color = "var(--warning)";
            }

            const logItem = document.createElement('div');
            logItem.className = 'log-item';
            logItem.innerHTML = `
                <span class="log-time">${timeString}</span>
                <i class="fas fa-${icon}" style="color: ${color};"></i>
                <span class="log-message">${message}</span>
            `;

            eventsLog.prepend(logItem);

            // محدود کردن تعداد رویدادهای نمایش داده شده
            if (eventsLog.children.length > 10) {
                eventsLog.removeChild(eventsLog.lastChild);
            }
        }

        // شروع برنامه
        window.onload = function() {
            // اتصال به SignalR
            connectSignalR();

            // فعال کردن ارسال با کلید Enter
            document.getElementById('temperatureInput').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    setTemperature();
                }
            });
        };
    </script>
</body>
</html>